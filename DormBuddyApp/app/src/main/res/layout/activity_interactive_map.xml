<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.cs477.dormbuddy.InteractiveMapActivity">
    </fragment>
    <!--These two elements will only appear when the user wants to add a marker-->
    <LinearLayout
        android:id="@+id/addMarkerItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Name Your Marker Then Tap"
            android:textAlignment="center"/>
        <EditText
            android:id="@+id/markerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textAlignment="center"
            android:hint="Name Your Marker Here"/>
    </LinearLayout>
    <Button
        android:id="@+id/viewSavedMarkersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Saved Markers"
        android:backgroundTint="@color/colorWhite"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:onClick="viewSavedMarkersClicked"/>
</RelativeLayout>
