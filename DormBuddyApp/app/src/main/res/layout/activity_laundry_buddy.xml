<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="left"
    tools:context="com.cs477.dormbuddy.LaundryBuddyActivity">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Laundry Buddy"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_weight="13"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Washers"
        android:textSize="26sp"
        android:layout_weight="8"
        android:textAlignment="center"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:id="@+id/washers"
        android:layout_weight="50">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Dryers"
        android:textSize="26sp"
        android:textAlignment="center"
        android:layout_weight="8"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:id="@+id/dryers"
        android:layout_weight="50">
    </android.support.v7.widget.RecyclerView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Probably a gear button"
        android:backgroundTint="@color/colorAmber"
        android:onClick="cyclePreferencesButtonClicked"
        android:layout_weight="10"/>
</LinearLayout>
