<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="end"
    tools:context="com.cs477.dormbuddy.LaundryBuddyActivity">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Laundry Buddy"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_weight="2"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Washers"
        android:textSize="26sp"
        android:layout_weight="1"
        android:textAlignment="center"/>
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8">
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/washers">
        </ListView>
    </HorizontalScrollView>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Dryers"
        android:textSize="26sp"
        android:textAlignment="center"
        android:layout_weight="1"/>
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8">
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/dryers">
        </ListView>
    </HorizontalScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Probably a gear button"
        android:backgroundTint="@color/colorAmber"
        android:onClick="cyclePreferencesButtonClicked"
        android:layout_weight="1"/>
</LinearLayout>
