<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <!--elements inside this grid view are buddy clickable images (e.g: Laundry Buddy)-->
    <GridLayout
        android:id="@+id/landingPageGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:orientation="vertical"
        style="@style/Theme.AppCompat.DayNight">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <ImageButton
                android:id="@+id/laundryBuddyImageButton"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="Laundry Buddy"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:onClick="buddyClicked"
                android:src="@drawable/laundry_machine" />

            <ImageButton
                android:id="@+id/mapBuddyImageButton"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="Map Buddy"
                android:onClick="buddyClicked"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/map" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <ImageButton
                android:id="@+id/studyBuddyImageButton"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="Study Buddy"
                android:onClick="buddyClicked"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:src="@drawable/book" />

