<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <!--elements inside this grid view are buddy clickable images (e.g: Laundry Buddy)-->
    <GridLayout
        android:id="@+id/landingPageGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        style="@style/Theme.AppCompat.DayNight">
        <ImageButton
            android:contentDescription="Laundry Buddy"
            android:src="@drawable/laundry_machine"
            android:id="@+id/laundryBuddyImageButton"
            android:layout_width="120dp"
            android:layout_height="120dp"

            android:scaleType="fitXY"
            android:onClick="buddyClicked"/>
        <ImageButton
            android:contentDescription="Map Buddy"
            android:src="@drawable/map"
            android:id="@+id/mapBuddyImageButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:onClick="buddyClicked"/>
        <ImageButton
            android:contentDescription="Study Buddy"
            android:src="@drawable/book"
            android:id="@+id/studyBuddyImageButton"
            android:scaleType="fitXY"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="buddyClicked"/>
        <ImageButton
            android:contentDescription="Event Buddy"
            android:src="@drawable/event"
            android:id="@+id/eventBuddyImageButton"
            android:scaleType="fitXY"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="buddyClicked"/>
        <ImageButton
            android:contentDescription="Profile Buddy"
            android:src="@drawable/buddy"
            android:id="@+id/profileBuddyImageButton"
            android:scaleType="fitXY"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:onClick="buddyClicked"/>
    </GridLayout>
</ScrollView>
