<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs477.dormbuddy.EditTemplateFragment">
    <!--only specific settings for the template type will show -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Template"
            android:textSize="28sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="Name"/>
        <EditText
            android:id="@+id/cycleNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:maxLength="32"
            android:textAlignment="center"
            android:inputType="textCapWords"
            android:maxLines="1"/>
        <!--   Laundry types are deprecated for edit   -->
        <!--               BOUNDARY                -->
        <LinearLayout
            android:id="@+id/dryerTemp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textStyle="bold"
                android:textSize="22sp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <RadioButton
                        android:id="@+id/dryerHigh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/dryerMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/dryerLow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/dryerNone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <!--               BOUNDARY                -->
        <LinearLayout
            android:id="@+id/delicates"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delicates?"
                android:textStyle="bold"
                android:textSize="22sp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <RadioButton
                        android:id="@+id/dryerYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/dryerNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <!--               BOUNDARY                -->
        <LinearLayout
            android:id="@+id/soil"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soil"
                android:textStyle="bold"
                android:textSize="22sp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <RadioButton
                        android:id="@+id/soilLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Light"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/soilMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/soilHeavy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heavy"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <!--               BOUNDARY                -->
        <LinearLayout
            android:id="@+id/cycle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cycle"
                android:textStyle="bold"
                android:textSize="22sp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <RadioButton
                        android:id="@+id/cycleNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/cyclePermPress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perm Press"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/cycleDelicates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delicates"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <!--               BOUNDARY                -->
        <LinearLayout
            android:id="@+id/washerTemp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textStyle="bold"
                android:textSize="22sp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <RadioButton
                        android:id="@+id/washerHot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hot"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/washerWarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Warm"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/washerCool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cool"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <!--               BOUNDARY                -->
        <LinearLayout
            android:id="@+id/smallLoad"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Small Load?"
                android:textStyle="bold"
                android:textSize="22sp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <RadioButton
                        android:id="@+id/washerYes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textAlignment="center"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:id="@+id/washerNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:textAlignment="center"
                        android:layout_weight="1" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <!--               BOUNDARY                -->
        <Button
            android:id="@+id/editTemplateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAmber"
            android:text="Edit Template"/>
    </LinearLayout>
</FrameLayout>
